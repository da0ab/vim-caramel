" Пустой стартовый экран
set shm+=I

" Цветовая схема]
colorscheme dark_puerh

" Размер шрифта
"set guifont=Anonymous_Pro:h14
set guifont=AnonymicePro\ Nerd\ Font\ Propo:h14

" Высота
set lines=75

" Ширина
set columns=210

" Сделать строку команд высотой в одну строку
set ch=1

" Включаем подсветку строки
set cursorline

" True-цвета
set termguicolors

" Отступ перед символами
set foldcolumn=1

" Замена символа незаполненной строки
set fillchars+=eob:.
